#include <iostream>
#include <iomanip>
#include <time.h>
#include <fstream>
#include <algorithm>

using namespace std;

void main()
{
	string fn1, fn2, fn3;
	cin >> fn1 >> fn2 >> fn3;
	ifstream file1(fn1);
	ofstream file2(fn2);
	ofstream file3(fn3);
	int size = 0;
	int* mas;
	mas = new int[size];
	int i = 0;
	while (!file1.eof()) {
		size++;
		file1 >> mas[i];
		i++;
	}
	for (int j = size - 1; j >= 0; j--)
		if (mas[j] > 0)
			file2 << mas[j] << " ";
	for (int j = size - 1; j >= 0; j--)
		if (mas[j] < 0)
			file3 << mas[j] << " ";
}
